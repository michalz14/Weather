#!/usr/bin/env ruby
# -*- coding: utf-8 -*-

require 'plist'
require_relative 'codegen'
require_relative 'plist_to_swift'
require_relative 'protocol_generator'

class ConfigGenerator
  CONFIG_FILES = [
    'Configurations/ConfigurationUREV.plist',
    'Configurations/ConfigurationPREM.plist'
  ].freeze

  def initialize
    @generated_files = []
  end

  def generate_all
    puts "ğŸš€ Uruchamianie generatora konfiguracji..."
    
  # Krok 1: Wygeneruj gÅ‚Ã³wny struct Configuration ze wszystkich danych plist
  generate_main_configuration_struct

  # Krok 2: Wygeneruj <Main>Protocol korzystajÄ…c z ProtocolGenerator
  generate_configuration_protocol

    # Krok 3: Generuj struktury Swift z plikÃ³w plist
    generate_swift_structs

    
    puts "âœ… Wszystkie konfiguracje zostaÅ‚y wygenerowane!"
    puts "ğŸ“ Wygenerowane pliki: #{@generated_files.join(', ')}"
  end

  private

  def generate_main_configuration_struct
    puts "\nğŸ“ Generowanie gÅ‚Ã³wnej struktury Configuration..."
    merged_data = merge_all_plist_data

    analyzer = PlistAnalyzer.new(merged_data)
    struct_registry = analyzer.analyze

    # UÅ¼ywamy teraz wspÃ³lnego SwiftCodeGenerator z opcjami aby uniknÄ…Ä‡ duplikacji
    generator = SwiftCodeGenerator.new(
      struct_registry,
      type_prefix: nil,
      skip_nested_structs: false,
      property_access: 'public ',
      with_defaults: false,
      include_constructors: true
    )

    swift_code = generator.generate_main_struct(
      merged_data,
      'Configuration',
      header: 'public struct Configuration: ConfigurationProtocol'
    )

    File.write('Configuration.swift', swift_code)
    @generated_files << 'Configuration.swift'
    puts "  âœ… Wygenerowano Configuration.swift przy uÅ¼yciu wspÃ³Å‚dzielonego generatora"
  end

  def generate_configuration_protocol
    puts "\nğŸ“ Generowanie ConfigurationProtocol..."
    unless File.exist?('Configuration.swift')
      puts "  âŒ BÅ‚Ä…d: Plik Configuration.swift nie istnieje!"
      return
    end
    begin
  protocol_gen = ProtocolGenerator.new
      protocol_gen.generate_configuration_protocol_from_configuration('Configuration.swift')
      @generated_files << 'ConfigurationProtocol.swift' if File.exist?('ConfigurationProtocol.swift')
    rescue => e
      puts "  âŒ BÅ‚Ä…d podczas generowania protokoÅ‚u: #{e.message}"
    end
  end


  def merge_all_plist_data
    puts "  ğŸ”„ ÅÄ…czenie danych ze wszystkich plikÃ³w plist..."
    
    merged_data = {}
    
    CONFIG_FILES.each do |plist_file|
      if File.exist?(plist_file)
        begin
          plist_data = Plist.parse_xml(plist_file)
          
          # Rekurencyjnie Å‚Ä…cz dane - w tym zagnieÅ¼dÅ¼one struktury
          merge_recursive(merged_data, plist_data)
          
        rescue => e
          puts "    âŒ BÅ‚Ä…d podczas Å‚Ä…czenia #{plist_file}: #{e.message}"
        end
      end
    end
    
    puts "    ğŸ“Š PoÅ‚Ä…czono #{merged_data.size} unikalnych kluczy gÅ‚Ã³wnych"
    merged_data
  end

  def merge_recursive(target, source)
    source.each do |key, value|
      if target.key?(key)
        # Klucz juÅ¼ istnieje - sprawdÅº co zrobiÄ‡
        if target[key].is_a?(Hash) && value.is_a?(Hash)
          # Oba sÄ… hashami - Å‚Ä…cz rekurencyjnie
          merge_recursive(target[key], value)
        elsif target[key].is_a?(Array) && value.is_a?(Array)
          # Oba sÄ… tablicami - Å‚Ä…cz unikalne elementy
          target[key] = (target[key] + value).uniq
        else
          # W innych przypadkach zachowaj pierwszÄ… wartoÅ›Ä‡
          # (juÅ¼ jest w target, nie nadpisuj)
        end
      else
        # Nowy klucz - dodaj
        if value.is_a?(Hash)
          target[key] = value.dup
        elsif value.is_a?(Array)
          target[key] = value.dup
        else
          target[key] = value
        end
      end
    end
  end

  # Lokalny helper uÅ¼ywany przy generowaniu pustych konstruktorÃ³w zagnieÅ¼dÅ¼onych struktur

  def generate_swift_structs
    puts "\nğŸ“ Generowanie struktur Swift..."
    
    CONFIG_FILES.each do |plist_file|
      if File.exist?(plist_file)
        puts "  ğŸ”„ Przetwarzanie: #{plist_file}"
        
        begin
          # Generujemy pliki konfiguracyjne tak, aby:
          # - nie generowaÅ‚y lokalnych zagnieÅ¼dÅ¼onych struktur
          # - uÅ¼ywaÅ‚y typÃ³w z Configuration (prefiks Configuration.)
          # - nie wymuszaÅ‚y Å¼adnego protokoÅ‚u
          generator = PlistToSwiftGenerator.new(
            plist_file,
            type_prefix: 'Configuration',
            skip_nested_structs: true
          )
          generator.generate
          
          # Dodaj wygenerowany plik do listy
          struct_name = extract_struct_name_from_plist(plist_file)
          swift_file = "#{struct_name}.swift"
          @generated_files << swift_file if File.exist?(swift_file)
          
          puts "  âœ… Wygenerowano: #{swift_file}"
        rescue => e
          puts "  âŒ BÅ‚Ä…d podczas generowania #{plist_file}: #{e.message}"
        end
      else
        puts "  âš ï¸  Plik nie istnieje: #{plist_file}"
      end
    end
  end

  def extract_struct_name_from_plist(plist_file)
    base_name = File.basename(plist_file, '.plist')
  end
end

# Uruchomienie jeÅ›li skrypt jest wywoÅ‚any bezpoÅ›rednio
if __FILE__ == $0
  generator = ConfigGenerator.new
  generator.generate_all
end


